@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - rsH60Store</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.2.0/dist/tailwind.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.25.0/dist/full.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<header>
    <div class="navbar bg-neutral text-neutral-content flex items-center p-5">
        <div class="flex space-x-4">
            <a class="btn btn-ghost text-xl" asp-controller="Home" asp-action="Index">Ryan's Store</a>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Manager") || User.IsInRole("Clerk"))
            {
                <a class="btn btn-ghost text-xl" asp-controller="Products" asp-action="Index">Products</a>
                <a class="btn btn-ghost text-xl" asp-controller="ProductCategory" asp-action="Index">Product Categories</a>
                <a class="btn btn-ghost text-xl" asp-controller="Customer" asp-action="Index">Customers</a>
            }
            <partial name="_LoginPartial"/>
        </div>


        <div class="ml-auto flex items-center">
            <label class="flex cursor-pointer gap-2">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round">
                    <circle cx="12" cy="12" r="5"/>
                    <path
                        d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/>
                </svg>
                <input type="checkbox" value="sunset" class="toggle theme-controller"/>
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round">
                    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                </svg>
            </label>
        </div>
    </div>
</header>

<div class="container mx-auto p-4 px-4 py-12">
    <main role="main" class="min-h-screen">
        @RenderBody()
    </main>
</div>

<footer class="footer bg-neutral text-neutral-content p-10 mt-8">
    <nav>
        <h6 class="footer-title">Services</h6>
        <a class="link link-hover">Branding</a>
        <a class="link link-hover">Design</a>
        <a class="link link-hover">Marketing</a>
        <a class="link link-hover">Advertisement</a>
    </nav>
    
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>