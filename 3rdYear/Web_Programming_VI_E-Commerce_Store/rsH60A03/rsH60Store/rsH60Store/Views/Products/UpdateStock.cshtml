@model rsH60Store.Models.Product

@{
    ViewData["Title"] = "Edit Stock";
}

<h2 class="text-2xl font-bold mb-4">Edit Stock for @Model.Description</h2>

<form asp-action="UpdateStock" method="post">
    <input type="hidden" name="productId" value="@Model.ProductId" />
    <div class="form-control mb-4">
        <label for="changeAmount" class="label">
            <span class="label-text">Change Amount</span>
        </label>
        <input type="number" id="changeAmount" name="changeAmount" class="input input-bordered" required />
        <span asp-validation-for="Stock" class="text-error"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Stock</button>
    <a asp-action="Index" class="btn btn-neutral ml-4">Cancel</a>
</form>