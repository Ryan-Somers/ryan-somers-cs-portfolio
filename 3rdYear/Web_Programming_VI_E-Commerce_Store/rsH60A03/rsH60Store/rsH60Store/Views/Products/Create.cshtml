@model Product

@{
ViewData["Title"] = "Create Product";
}

<h2 class="text-2xl font-bold mb-4">Create Product</h2>

<form asp-action="Create" method="post" class="max-w-3xl mx-auto bg-base-200 p-6 rounded-lg shadow-lg">
    <div class="form-control mb-4">
        <label asp-for="ProdCatId" class="label">
            <span class="label-text">Product Category</span>
        </label>
        <select asp-for="ProdCatId" asp-items="ViewBag.ProductCategories" class="select select-bordered">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="ProdCatId" class="text-error"></span>
    </div>

    <div class="form-control mb-4">
        <label asp-for="Description" class="label">
            <span class="label-text">Description</span>
        </label>
        <input asp-for="Description" class="input input-bordered" placeholder="Enter product description" />
        <span asp-validation-for="Description" class="text-error"></span>
    </div>

    <div class="form-control mb-4">
        <label asp-for="Manufacturer" class="label">
            <span class="label-text">Manufacturer</span>
        </label>
        <input asp-for="Manufacturer" class="input input-bordered" placeholder="Enter manufacturer name" />
        <span asp-validation-for="Manufacturer" class="text-error"></span>
    </div>

    <div class="form-control mb-4">
        <label asp-for="Stock" class="label">
            <span class="label-text">Stock</span>
        </label>
        <input asp-for="Stock" type="number" class="input input-bordered" placeholder="Enter stock quantity" />
        <span asp-validation-for="Stock" class="text-error"></span>
    </div>

    <div class="form-control mb-4">
        <label asp-for="BuyPrice" class="label">
            <span class="label-text">Buy Price</span>
        </label>
        <input asp-for="BuyPrice" type="number" step="0.01" class="input input-bordered" placeholder="Enter buy price" />
        <span asp-validation-for="BuyPrice" class="text-error"></span>
    </div>

    <div class="form-control mb-4">
        <label asp-for="SellPrice" class="label">
            <span class="label-text">Sell Price</span>
        </label>
        <input asp-for="SellPrice" type="number" step="0.01" class="input input-bordered" placeholder="Enter sell price" />
        <span asp-validation-for="SellPrice" class="text-error"></span>
    </div>

    <div class="form-control mb-4">
        <label asp-for="ImageUrl" class="label">
            <span class="label-text">ImageUrl</span>
        </label>
        <input asp-for="ImageUrl" class="input input-bordered" placeholder="Enter imageurl name" />
        <span asp-validation-for="ImageUrl" class="text-error"></span>
    </div>

    <div class="flex flex-row  mt-6 gap-2">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-neutral ml-4">Cancel</a>
    </div>
</form>