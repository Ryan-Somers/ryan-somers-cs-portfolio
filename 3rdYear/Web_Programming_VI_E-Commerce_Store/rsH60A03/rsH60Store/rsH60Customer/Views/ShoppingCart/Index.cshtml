@model IEnumerable<rsH60Customer.DTO.CartItemDto>

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "_Layout";
}

<h2 class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-4xl font-bold bg-clip-text text-transparent p-3">Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty. <a asp-controller="Products" asp-action="Index">Go shopping</a></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>
                <form method="post" asp-action="UpdateQuantity" asp-controller="ShoppingCart" class="flex items-center gap-2">
                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                    <input
                        type="number"
                        name="quantity"
                        min="1"
                        value="@item.Quantity"
                        class="input input-bordered w-16 text-center" />
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
                </td>
                <td>@item.Price</td>
                <td>@(item.Quantity * item.Price)</td>
                <td>
                    <form method="post" asp-action="RemoveFromCart" asp-controller="ShoppingCart">
                        <input type="hidden" name="cartItemId" value="@item.CartItemId"/>
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="flex justify-end mt-4">
        <a asp-action="Checkout" asp-controller="ShoppingCart" class="btn btn-primary">
            Proceed to Checkout
        </a>
    </div>
}
