@using static HVK.Models.Hvkuser;
@model HVK.Models.Hvkuser

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h1>Create A New Customer Account</h1>

<hr />
<div>
    <a asp-action="Index" asp-controller="Login">Back To Login</a>
</div>

  <form asp-action="Index" asp-controller="CreateAccountLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-8">
            <div class="form-group">
            <label asp-for="FirstName" class="control-label requiredLabel"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="LastName" class="control-label requiredLabel"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Password" class="control-label requiredLabel"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label">Street Address</label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Province" class="control-label">Province:</label>
                <div style="display:flex;">
                    <input type="radio" asp-for="Province" value="ON" id="provinceON" />
                    <label for="provinceON">Ontario</label>

                    <input type="radio" asp-for="Province" value="QC" id="provinceQC" />
                    <label for="provinceQC">Quebec</label>
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
    <div class="col-md-8" style="background: rgb(240,225,150);">
            <p style="color:red;">Please enter at LEAST 1 row</p>

            <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="CellPhone" class="control-label"></label>
                <input asp-for="CellPhone" class="form-control" />
                <span asp-validation-for="CellPhone" class="text-danger"></span>
            </div>
        </div>
    <hr />
        <div class="col-md-8">
            <div class="form-group">
            <label asp-for="EmergencyContactFirstName" class="control-label requiredLabel"></label>
                <input asp-for="EmergencyContactFirstName" class="form-control" />
                <span asp-validation-for="EmergencyContactFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="EmergencyContactLastName" class="control-label requiredLabel"></label>
                <input asp-for="EmergencyContactLastName" class="form-control" />
                <span asp-validation-for="EmergencyContactLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="EmergencyContactPhone" class="control-label requiredLabel"></label>
                <input asp-for="EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
            </div>

        <hr />

            <div class="form-group">
                <input type="submit" value="Create New Account" class="btn-primary" />
            </div>
        </div>
    <input type="hidden" asp-for="UserType" value="Customer" />
  </form>