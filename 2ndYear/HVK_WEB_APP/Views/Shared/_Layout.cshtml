<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Images/Icon.png" type="image/x-icon">
    <title>@ViewData["Title"] - HVK - Happy Valley Kennels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HVK.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <div class="logo">
            <img src="~/Images/Logo.svg" alt="HVK Logo">
        </div>
        <h1 class="title">Happy Valley Kennels</h1>
        <div class="avatar">
            <button class="btn logoutBtn"><a asp-controller="Login" asp-action="Index">Logout</a></button>
            <img src="~/Images/Avatar.svg" alt="Avatar">
        </div>
    </header>
    <nav>
        @if (IsSectionDefined("nav"))
        {
            @RenderSection("nav", false)
        }
        else
        {
            // Retrieve userObj
            
            /* customer pages */
            <ul>
                <li>@Html.ActionLink("Home", "Index", "HomePage", null, new { title = "Go Home" })</li>
                <li>@Html.ActionLink("Pets", "Index", "Pets", null, new { title = "Go to Pets" })</li> 
                <li>@Html.ActionLink("Reservations", "Index", "UnderConstruction", null, new { title = "Go to Reservations" })</li>
                <li>@Html.ActionLink("History", "Index", "History", null, new { title = "Go to Reservation History" })</li>
                <li>@Html.ActionLink("Account", "Edit", "Hvkusers", null, new { title = "Go to Account Management" })</li>
            </ul>
        }
    </nav>
        @RenderBody()
        @RenderSection("Scripts", required: false)
    <footer>
        <p class="copyrights">
            Copyrights &copy; All Rights Reserved
            <span class="copyrights">
                HAPPY VALLEY KENNELS LLC.
            </span>
            @DateTime.Now.Year.ToString() &nbsp;&nbsp;
            Having a problem? Contact Us:
            <a id="email" href=mailto:2152756@cegep-heritage.qc.ca;?cc =2232517@cegep-heritage.qc.ca;6192995@cegep-heritage.qc.ca;2237815@cegep-heritage.qc.ca;>
                Happy Valley Kennels
            </a>
        </p>
    </footer>
</body>

</html>
