@model HVK.Models.JoinCustomerReservationsPets
<main>
    <h3 class="text-center">Viewing @Model.Hvkuser.FirstName @Model.Hvkuser.LastName's Account</h3>
    <div class="row staffDashDiv">

        <!-- Pets Column -->
        <div class="col">
            <h2 class="text-center">Your Pets</h2>
            <div>
                @foreach (var pet in Model.Pets)
                {
                    <section class="resSection">
                        <div class="row">
                            <!-- Pets -->

                            <div class="col">

                                <p>
                                    <img src="~/Images/PetIcon.png" alt="pet icon" />
                                    <span class="fw-bold h5">@pet.Name</span>
                                </p>

                            </div>
                            <div class="col-2 singleA">
                                <a asp-controller="Pets" asp-action="Details" asp-route-id="@pet.PetId" class="viewResBtn"><img src="~/Images/ViewRes2Icon.png" alt="View Pet: " /></a>
                            </div>

                        </div>

                    </section>
                }
            </div>
        </div>

    </div>
</main>
