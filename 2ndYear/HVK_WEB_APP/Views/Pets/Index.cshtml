@model IEnumerable<HVK.Models.Pet>

@{
    ViewData["Title"] = "Index";
}

<main role="main" class="pb-3">

    <div class="col">
        @if (Model != null)
        {

            <h2 class="text-center">Your Pets</h2>
            <div>
                <button class="align-content-center btn-primary"><a asp-controller="Pets" asp-action="Create">Add a Pet</a></button>
                @foreach (var pet in Model)
                {
                    <section class="resSection">
                        <div class="row">

                            <div class="col">

                                <p>
                                    <img src="~/Images/PetIcon.png" alt="pet icon" />
                                    <span class="fw-bold h5">@pet.Name</span>
                                </p>

                            </div>
                            <div class="col-2 singleA">
                                <a asp-controller="Pets" asp-action="Details" asp-route-id="@pet.PetId" class="viewResBtn"><img src="~/Images/ViewRes2Icon.png" alt="View Pet: " /></a>
                            </div>

                        </div>

                    </section>
                }
            </div>
        } else
        {
            <h3>You don't currently have pets associated with your account.</h3>
        }
    </div>
</main>
