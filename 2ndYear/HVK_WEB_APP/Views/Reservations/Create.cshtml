@model HVK.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4 p-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate"  class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <h2>Select Pets</h2>
                @foreach (var pet in ViewBag.Pets)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" name="selectedPetIds" value="@pet.PetId" id="pet_@pet.PetId" />
                        <label class="form-check-label" for="pet_@pet.PetId">@pet.Name</label>
                    </div>
                }
            </div>

            <input type="submit" value="Next" class="btn-primary" />

        </form>
    </div>
</div>

<div>
    <a asp-controller="HomePage" asp-action="Staff">Back to Dashboard</a>
</div>

